{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "@env/*": [
                "environments/*"
            ],
            "@models/*": [
                "app/models/*"
            ],
            "@services/*": [
                "app/services/*"
            ],
            "@guards/*": [
                "app/guards/*"
            ],
            "@constants/*": [
                "app/constants/*"
            ],
            "@directives/*": [
                "app/directives/*"
            ],
            "@components/*": [
                "app/components/*"
            ],
            "@pipes/*": [
                "app/pipes/*"
            ],
            "@utils/*": [
                "app/utils/*"
            ]
        }
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}
